@page "/opensessions/{Date:datetime}"
@inject ScheduleService ScheduleService
@attribute [Authorize]

<SessionBooking Date="Date" Calendar="@_calendar" Title="Open session booking" SessionPath="opensessions"></SessionBooking>


@code {

    private ISessionCalendar _calendar;
    
    [Parameter]
    public DateTime Date { get; set; }

    protected override Task OnInitializedAsync()
    {
        _calendar = new OpenSessionCalendar(TeamService.Open);
        return Task.CompletedTask;
    }
}
