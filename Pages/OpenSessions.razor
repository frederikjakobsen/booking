@page "/opensessions/{Date:datetime}"
@inject ScheduleService _scheduleService
@inject TeamService _teamService
@attribute [Authorize]

<SessionBooking Date="Date" Calendar="@_calendar" Title="Open session booking" SessionPath="opensessions"></SessionBooking>


@code {

    private ISessionCalendar _calendar;
    
    [Parameter]
    public DateTime Date { get; set; }

    protected override Task OnInitializedAsync()
    {
        _calendar = new OpenSessionCalendar(_teamService.GetTeam("open"));
        return Task.CompletedTask;
    }
}
