@page "/teamsessions/{Date:datetime}"
@inject ScheduleService ScheduleService
@attribute [Authorize]

<SessionBooking Date="Date" Calendar="@_calendar" Title="Team session booking" SessionPath="teamsessions"></SessionBooking>


@code {

    private ISessionCalendar _calendar;
    
    [Parameter]
    public DateTime Date { get; set; }

    protected override Task OnInitializedAsync()
    {
        _calendar = new TeamSessionCalendar(ScheduleService);
        return Task.CompletedTask;
    }
}
